<h1>Details</h1>
<div class="row justify-content-center d-flex"></div>
<div class="col-md-4 mb-3">
    <div class="card">
        <div class="card-body">

            <h3 class="card-title">Bienvenido {{user.username}}</h3>
            <p class="card-text text-capitalize"> Rango: {{user.role}}</p>
            <p class="card-text text-capitalize"> Team:{{user.type}}</p>

            {{#if isMaster}}
            <a href="/editar/{{user._id}}" class="btn btn-warning">Editar Personaje</a>
            <form action="/libros/eliminar/{{_id}}" method="POST" style="display: inline">
                <input type="submit" value="Eliminar Personaje" class="btn btn-danger">
            </form>
            {{/if}}

        </div>

    </div>
</div>
</div>